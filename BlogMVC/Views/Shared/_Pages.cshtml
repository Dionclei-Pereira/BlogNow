<div class="pagination-container text-left mt-4">
    <p>Page @ViewBag.CurrentPage of @ViewBag.TotalPages</p>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-start">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action(null, null, new { text = ViewBag.text, page = ViewBag.CurrentPage - 1 })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">&laquo;</span>
                </li>
            }
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action(null, null, new { text = ViewBag.text, page = i })">@i</a>
                </li>
            }
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action(null, null, new { text = ViewBag.text, page = ViewBag.CurrentPage + 1 })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">&raquo;</span>
                </li>
            }
        </ul>
    </nav>
</div>

<style>

    .pagination {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .pagination.justify-content-start {
            display: flex;
            justify-content: flex-start;
        }

    .page-item {
        display: inline-block;
        margin: 0 5px;
    }

    .page-link {
        display: block;
        padding: 10px 15px;
        background-color: #f1f1f1;
        color: #6a0dad; 
        text-decoration: none;
        border-radius: 5px;
        font-size: 16px;
    }

        .page-link:hover {
            background-color: #b1a0d9; 
        }

    .page-item.active .page-link {
        background-color: #6a0dad; 
        color: white;
    }

   
    .page-item.disabled .page-link {
        background-color: #d3d3d3;
        color: #aaa;
        pointer-events: none;
    }
</style>